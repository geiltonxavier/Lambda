@using Lambda.Web.Infraestrutura.Helpers
@using Lambda.Web.Infraestrutura.Helpers.Enum
@model Lambda.Core.Entities.Empresa
@{
    ViewBag.Title = "Inserir";
    Layout = "~/Views/Shared/_ContentLayout.cshtml";
}

@section headerWidget
{
    <span class="widget-icon"><i class="fa fa-building"></i></span>
    <h2>Inserir Empresa</h2>
    &nbsp;&nbsp;<i id="divLoading" style="display: none" class="fa fa-cog fa-2x fa-spin"></i>
    
}

@using (Ajax.BeginForm("Inserir", "Empresa", new AjaxOptions() { HttpMethod = "Post", LoadingElementId = "divLoading", 
    InsertionMode = InsertionMode.Replace, OnSuccess = "onSucessoEmpresa"}, new {@class="smart-form"}))
{
    <fieldset>
        <div class="row">
            <section class="col col-6">
                @Html.DisplayNameFor(e => e.Nome)
                @Html.Lambda().TextBox("Nome", TextBoxType.Nome)
            </section>
            <section class="col col-6">
                @Html.DisplayNameFor(e => e.NomeFantasia)
                @Html.Lambda().TextBox("NomeFantasia")
            </section>
            <section class="col col-6">
                @Html.DisplayNameFor(e => e.Telefone)
                @Html.Lambda().TextBox("Telefone", TextBoxType.Telefone)
            </section>
            <section class="col col-6">
                @Html.DisplayNameFor(e => e.CNPJ)
                @Html.Lambda().TextBox("CNPJ", TextBoxType.CNPJ)
            </section>
            <section class="col col-6">
                @Html.DisplayNameFor(e => e.DataFundacao)
                @Html.Lambda().TextBox("DataFundacao", TextBoxType.Data)
            </section>
            <section class="col col-6">
                @Html.DisplayNameFor(e => e.Ativo)
                @Html.EditorFor(x=>x.Ativo)
            </section>
        </div>
    </fieldset>
    <footer>
        <button type="submit" class="btn brn-primary">Salvar</button>
    </footer>
}


